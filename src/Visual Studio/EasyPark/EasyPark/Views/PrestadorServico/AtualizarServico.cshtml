@model EasyPark.EasyPark.Domain.Responses.PrestadorServicoResponse;

@{
    ViewData["Title"] = "AtualizarServico";
    Layout = "~/Views/Shared/_LayoutPrestadorServico.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h2>Atualizar serviço @Model.NomeServico</h2>
        <p class="text-justify">Realize a atualização do serviço selecionado e depois de tudo pronto, basta pressionarl o botão salvar.</p>
    </div>
</div>




<form asp-action="SalvarServico" mehtod="post" onsubmit="return;true">
    <div class="row">
        <div class="col-md-6">

            <label for="NomeEstabelecimento" id="LblEstabelecimento" class="control-label">Informe o nome do estabelecimento</label>
            <input type="text" id="NomeEstabelecimento" class="form-group" value="@Model.NomePrestador" placeholder="Insira o nome do local do prestador de serviço. EX: Guincho golveia" asp-for="@Model.NomePrestador" />
        </div>
        <div class="col-md-6">
            <label for="ServicoPrestado" id="LblServicoPrestado" class="control-label">Selecione o tipo de serviço</label>
            <select id="ServicoPrestado" class="dropdown" asp-for="@Model.NomeServico">
                <option value="@Model.NomeServico">@Model.NomeServico</option>
                <option value="Chaveiro">Chaveiro</option>
                <option value="Guincho">Guincho</option>
                <option value="Lava rápido">Lava rápido</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label for="HorarioFuncionamento" id="LblHorarioFuncionamento" class="control-label">Informe o horário de funcionamento</label>
            <input type="text" id="HorarioFuncionamento" class="form-group" value="@Model.HorarioFuncionamento" asp-for="@Model.HorarioFuncionamento" />
        </div>
        <div class="col-md-6">
            <label for="Telefone" id="LblTelefone" class="control-label">Telefone de contato</label>
            <input type="tel" id="Telefone" class="form-group" value="@Model.TelefonePrestador" asp-for="@Model.TelefonePrestador" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label for="Endereco" id="LblEndereco" class="control-label">Informe o endereço completo</label>
            <input type="text" id="Endereco" class="form-group" value="@Model.Endereco" asp-for="@Model.Endereco" />
        </div>
        <div class="col-md-6">
            <label for="Estado" id="LblEstado" class="control-label">Selecione o estado de atuação</label>
            <select id="Estado" class="dropdown" asp-for="@Model.EstadoId">




                <option value=@Model.estados.Where(x => x.EstadoId == Model.EstadoId).FirstOrDefault().EstadoId>@Model.estados.Where(x => x.EstadoId == Model.EstadoId).FirstOrDefault().NomeEstado</option>
                @foreach (var estados in Model.estados)
                {
                    <option value=@estados.EstadoId>@estados.NomeEstado</option>
                }
            </select>
        </div>
    </div>
    <input type="hidden" value="@Model.PrestadorServicosId" asp-for="@Model.PrestadorServicosId" />
    <input type="hidden" value="@ViewBag.UsuarioIdLogado" asp-for="@Model.PrestadorCriador" />
    <div class="row">
        <div class="col-md-6">
            <input type="reset" class="btn btn-danger" value="Limpar dados" />
        </div>
        <div class="col-md-6">
            <input type="submit" class="btn btn-success" value="Salvar alterações" />
        </div>
    </div>
</form>
