@model EasyPark.EasyPark.Domain.Requests.UsuariosRequest;
@{
    ViewData["Title"] = "Acesso ao sistema";
}


<div class="row">
    <div class="col-md-12">
        <h2>Autenticação no sistema</h2>
        <br />
    </div>
</div>

<form asp-action="EfetivaLogin" method="post" onsubmit="return; true">
    <div class="row">
        <div class="col-md6">
            <label for="email" id="LblEmail" class="control-label">Email</label>
            <input type="email" id="email" class="form-group" asp-for="@Model.Email" />
        </div>
        <div class="col-md-6">
            <label for="senha" id="LblSenha" class="custom-control-label">Senha</label>
            <input type="password" id="senha" class="form-group" asp-for="@Model.Senha" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <input type="reset" class="btn btn-secondary" value="Limpar dados" />

        </div>
        <div class="col-md-6">
            <input type="submit" class="btn btn-success" value="Entrar" />

        </div>
    </div>

</form>
